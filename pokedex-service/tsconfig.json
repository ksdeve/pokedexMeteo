{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "jest"],
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/seed.js"],
  "exclude": ["node_modules", "dist"]
}
