{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts", "jest.config.js"],
  "exclude": ["node_modules", "dist"]
}
